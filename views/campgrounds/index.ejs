<%- include("../partials/header") %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over thr world</p>
            <p>
                <a class="btn-success btn-lg" href="/campgrounds/new">Add new CampGROUNDS</a>
            </p>
        </div>
    </header>
    
    
    <div class="row">
            <h3>Our most popular campgrounds</h3>
    </div>



    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img src="<%= camp.image %>" width="245px" height="200px">
                    <div class="caption">
                        <h6><%= camp.name %></h6>
                        <p>
                            <a href="/campgrounds/<%= camp._id %>" class ="btn btn-primary">Show Info</a>
                        </p>
                    </div>

                </div>
            </div>
            <% }); %>
    </div>
</div>
<%- include("../partials/footer") %>

